<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="MyTask" basedir="/tmp" default="run_crap4j" >
	<taskdef name="crap4j" classname="com.xagitarlabs.crap4j.anttask.Crap4jAntTask" classpath="/Users/bobevans/Documents/projects/svnworkspace/crap4j/bin" />
	
	<path id="crap4j.classpath">
	        <pathelement location="dist/lib/asm-xml-3.0.jar"/>
	        <pathelement location="dist/lib/asm-util-3.0.jar"/>
	        <pathelement location="dist/lib/asm-tree-3.0.jar"/>
	        <pathelement location="dist/lib/asm-commons-3.0.jar"/>
	        <pathelement location="dist/lib/asm-analysis-3.0.jar"/>
	        <pathelement location="dist/lib/asm-3.0.jar"/>
	        <pathelement location="dist/lib/args4j-2.0.1.jar"/>
	    </path>
	
	<target name="run_crap4j">
		<crap4j projectdir = "/tmp" outputDir="/tmp/output" >
			<classDirs>
				<pathElement location="/tmp/path1" />
				<pathElement location="/tmp/path2" />
			</classDirs>
			<srcDirs>
				<pathElement location="/tmp/src" />
			</srcDirs>
			<testClassDirs>
				<pathElement location="/tmp/testpath1" />
				<pathElement location="/tmp/testpath2" />
			</testClassDirs>
			<libClasspath>
				<path refid="crap4j.classpath" />
			</libClasspath>
		</crap4j>
	</target>
</project>