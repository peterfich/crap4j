<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Crap4j Action Set"
            visible="true"
            id="Crap4jEclipse.actionSet">
         <menu
               id="crap4jMenu"
               label="Crap4j"
               path="additions">
            <separator
                  name="crap4jGroup">
            </separator>
         </menu>
         <action
               class="org.crap4j.crap4jeclipse.actions.Crap4jAction"
               disabledIcon="icons/tp_disabled16.gif"
               enablesFor="1"
               icon="icons/tp16.gif"
               id="org.crap4j.crap4jeclipse.actions.Crap4jAction"
               label="&amp;Run Crap4j"
               menubarPath="crap4jMenu/crap4jGroup"
               toolbarPath="crap4jGroup"
               tooltip="Run Crap4j">
            <selection
                  class="org.eclipse.jdt.core.IJavaProject">
            </selection>
          
         </action>
      </actionSet>
      
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml"
            primary="true">
      </toc>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="Crap4j"
            class="org.crap4j.crap4jeclipse.preferences.Crap4jPreferencePage"
            id="org.crap4j.crap4jeclipse.preferences.Crap4jPreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.crap4j.crap4jeclipse.preferences.PreferenceInitializer">
      </initializer>
   </extension>
